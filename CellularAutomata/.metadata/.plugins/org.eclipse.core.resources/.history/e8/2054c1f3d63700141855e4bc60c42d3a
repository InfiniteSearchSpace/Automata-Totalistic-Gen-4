
import javax.swing.JFrame;
import javax.swing.JOptionPane;


public class StatisticFrame extends JFrame {
	
	ClickPanel[][] pp;
	automataLib a;
	jMenuStats jmen;
	DotPlot dp;
	
	int pXCount = 0;
	int pYCount = 0;
	int panelSize = 16;
	int lastsize = panelSize;
	int maxPanelVal = 0;
	int gridSize = 20;
	
	public StatisticFrame(ml ML, automataLib aa) {
		
		a=aa;
		
		a.u.statsLive = true;
		a.u.statAr = new StatisticFrame[1];
		a.u.statAr[0] = this;
		
		jmen = new jMenuStats(this, ML, a);
		
		initSF(256);
		
		graphInit();
	}
	
	public void initSF(int blockSize){
		
		int frameSize = 256;
		
		setLayout(null);
		
		setSize(frameSize, frameSize);
		
		setVisible(true);
		setResizable(false);
		setLocation(96, 32);
		
		

	}

	public void graphInit() {
		dp = new DotPlot(4,4,getWidth()-16,getHeight()-32,a.u);
		add(dp);
		dp.repaint();
	}
	
	public void updateGraph(){
		dp.repaint();
	}
}
