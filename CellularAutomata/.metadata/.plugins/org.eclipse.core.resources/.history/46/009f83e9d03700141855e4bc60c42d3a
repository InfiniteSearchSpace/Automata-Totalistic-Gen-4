
import javax.swing.JFrame;
import javax.swing.JOptionPane;


public class StatisticFrame extends JFrame {
	
	ClickPanel[][] pp;
	automataLib a;
	jMenuStats jmen;
	
	int pXCount = 0;
	int pYCount = 0;
	int panelSize = 16;
	int lastsize = panelSize;
	int maxPanelVal = 0;
	int gridSize = 20;
	
	public StatisticFrame(ml ML, automataLib aa) {
		
		a=aa;
		
		jmen = new jMenuStats(this, ML, a);
		
		initSF(256);
		
		graphTest();
	}
	
	public void initSF(int blockSize){
		
		int frameSize = 256;
		
		setLayout(null);
		
		setSize(frameSize, frameSize);
		
		setVisible(true);
		setResizable(false);
		setLocation(96, 32);
		
		

	}

	public void graphTest() {
		DotPlot dp = new DotPlot(4,4,64,64,this);
		dp.repaint();
	}
}
